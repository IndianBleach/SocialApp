                                <span class="t-md t-med clr-mute">Основные данные 1/2</span>
                            </div>
                            <div class="form-floating mb-3">
                                <input autocomplete="off"
                                       minlength="4"
                                       maxlength="32"
                                       type="text"
                                       class="form-upd begin-validate need-next-input form-control"
                                       id="floatingInput"
                                       placeholder="Имя пользователя" />
