                                <p class="p-1 ps-2 mb-0 t-sm t-smbold text-muted">
                                    @Model.Idea.Status.Description
                                </p>
                            </div>
                        </section>
                        <section>
                            <div class="aside_section_shadow mt-3 col-12 bg-darkn rad-lg">
