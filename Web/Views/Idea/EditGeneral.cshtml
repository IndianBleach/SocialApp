                                    <img src="~/media/userAvatars/@avatar"
                                         height="33"
                                         width="33"
                                         class="rounded-circle" />
                                    <div class="ps-2 overflow-hidden">
                                        <span class="t-md t-med clr-white">Вы</span>
                                        <p class="mb-0 t-sm t-smbold text-muted">@Model.Idea.CurrentRole.RoleName</p>
                                    </div>
                                </div>
                                @if (Model.Idea.CurrentRole.Role <= ApplicationCore.DTOs.Idea.CurrentUserRoleTypes.Member)
                                {
                                    <div class="btn-back-hover aside_section_adaptive">
                                        <button class="p-3 showNewTopicWindowBtn col-12 btn-unfocus hover-white btn clr-mute t-bold t-sm bg-transparent">
