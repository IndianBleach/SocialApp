<div class="container-sm p-0 main_idea" style="margin-top: 140px;">
    <div class="mt-3 mt-md-0 idea_aside position-relative">
        <aside>
            <div class="position-relative">
                <div class="position-fixed-profile position-fixed-idea">
                    <section>
                        <div class="profile_aside mt-3 col-12 bg-darkn rad-lg">
                            <div class="col-12 d-flex justify-content-center">
                                <img src="~/media/userAvatars/@avatar"
                                     height="192"
                                     width="192"
                                     class="rounded-circle" />
                            </div>
                            <div class="text-center aside_section_adaptive b-bottom pt-5 pb-5 justify-content-center col-12 d-flex align-items-center">
                                <label class="t-md t-med clr-white">@Model.Name</label>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </aside>
    </div>
    <main>
        <div class="idea_adaptive">
            <div class="profile_inside idea_inside">
                <div class="col-12 rad-md bg-darkn mt-3">
                    <ul class="nav d-flex col-12">
                        <li class="p-0 text-center active idea_menu_link nav-item">
                            <a class="p-3 ps-1 pe-1 ps-lg-2 ps-xl-3 pe-xl-3 nav-link hover-white">
                                <svg xmlns="http://www.w3.org/2000/svg"
                                     width="16"
                                     height="16"
                                     fill="currentColor"
                                     class="bi bi-gear"
                                     viewBox="0 0 16 16">
                                    <path d="M8 4.754a3.246 3.246 0 1 0 0 6.492 3.246 3.246 0 0 0 0-6.492zM5.754 8a2.246 2.246 0 1 1 4.492 0 2.246 2.246 0 0 1-4.492 0z" />
